# Celda 3: Importar librerías
import torch
import matplotlib.pyplot as plt
from models.gan import GAN
from training.train import GANTrainer
from utils.data_loader import get_data_loader

# Celda 4: Configurar dispositivo
device = torch.device('cuda' if torch.cuda.is_available() else 'cpu')
print(f'Usando dispositivo: {device}')

# Celda 5: Cargar datos
dataloader = get_data_loader('cifar10', batch_size=128, image_size=64)

# Celda 6: Inicializar y entrenar modelo
trainer = GANTrainer(z_dim=100, channels=3, lr=0.0002, device=device)
trainer.train(dataloader, epochs=50, save_interval=10)

# Celda 7: Generar y mostrar imágenes
trainer.gan.generator.eval()
with torch.no_grad():
    generated_images = trainer.gan.generate(16, device=device)

# Mostrar imágenes generadas
fig, axes = plt.subplots(4, 4, figsize=(8, 8))
for i, ax in enumerate(axes.flat):
    img = generated_images[i].cpu().permute(1, 2, 0)
    img = (img + 1) / 2  # Desnormalizar
    ax.imshow(img)
    ax.axis('off')
plt.show()